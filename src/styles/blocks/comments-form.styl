.comment-form
  display block
  @media (min-width $screen_sm)
    margin-left 80px

  &__input
    padding 0 6px
    margin-bottom 6px
    border-radius: 4px;
    outline: none;
    border-style: solid;
    border-width: 1px;
    border-color: #e9e9e9;
    font-size 18px

  &__label
    margin-right 6px

  &__textarea
    width 100%
    font-size 18px
    padding 9px 6px;
    outline none;
    border 1px solid #e1e8ed
    border-radius 4px

  &__submit
    background-color #43AC6A
    border-color #368a55
    margin-left auto
    margin-right auto
    margin-top 20px
    &:hover
      background-color #339C5A
    @media (min-width $screen_sm)
      margin-right 0
