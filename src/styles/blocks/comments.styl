.comments
  margin 16px 0 0 10%

  &_root
    margin-left 0
    margin-bottom 32px

  &__list
    display block
    margin 0
    padding 0
    list-style none

  &__item
    display block
    background-color #fafafa
    border 1px solid #e1e8ed
    margin-bottom 16px
    border-radius 4px

  &__inner-wrap
    padding 10px


  &__user
    display inline-block
    margin-bottom 6px

  &__avatar
    display inline-block
    width 40px
    height 40px
    background-image url('../img/user.jpeg')
    background-position center
    background-size cover
    border 1px solid #e9e9e9;
    vertical-align middle

  &__name
    font-weight 800
    display inline-block
    vertical-align middle
    margin-left 10px

  &__text
    margin-left 20px

  &__context
    //font-size 14px
    margin-bottom 6px
    @media (min-width $screen_sm)
      margin-left 80px

  &__context-value
    font-style italic
    padding-left 6px
