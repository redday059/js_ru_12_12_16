.header
  background-color #000
  color #fff
  margin-bottom 20px
  @media (min-width $screen_sm)
    margin-bottom 22px
  @media (min-width $screen_md)
    margin-bottom 24px
  @media (min-width $screen_lg)
    margin-bottom 26px

  &__link
    color #fff
    text-decoration none

.title
  margin 0
  line-height 120px

.switcher
  line-height 120px
  text-align right

.language
  font-size 18px
  vertical-align middle
  padding-right 6px
  @media (min-width $screen_sm)
    padding-right 8px
  @media (min-width $screen_md)
    padding-right 10px

.language:last-child
  padding-right 0

.language:hover
  cursor pointer