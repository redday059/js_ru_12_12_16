.article-list
  list-style none
  padding 0
  font-size 18px

  &__article
    //outline 1px solid blue
    margin-bottom 6px
    @media (min-width $screen_sm)
      margin-bottom 12px
      position relative


  &__link-wrapper
    display none
    @media (min-width $screen_sm)
      display block
      background-image url('../img/photo.png')
      background-position center
      height 182px
      line-height 182px
      overflow hidden
    @media (min-width $screen_md)
      height 140px
      line-height 140px
    @media (min-width $screen_lg)
      height 200px
      line-height 200px

  &__link
    position relative
    display block
    padding-left 24px
    color black
    @media (min-width $screen_sm)
      display block
      position absolute
      width 100%
      height 100%
      top 0
      bottom 0
      left 0
      right 0
      color transparent

  &__link:before
    position absolute
    display block
    content ''
    background-image url('../img/arrow.png')
    background-size cover
    height 12px
    width 12px
    left 0
    top 50%;
    margin-top -6px
    transition transform .3s ease
    @media (min-width $screen_sm)
      display none

  &__link-text
    @media (min-width $screen_sm)
      position static
      display inline-block
      vertical-align bottom
      line-height normal
      padding 16px
      text-decoration: none;
      text-transform: uppercase;
      color: #fff;
      font-weight: 300;
    @media (min-width $screen_md)
      text-align center
      font-size 12px
      padding 10px
    @media (min-width $screen_lg)
      vertical-align bottom
      font-size 18px
      padding 16px
      text-align left


  //&_opened &__link
  &__link:hover
    &:before
      transform rotate(-90deg)

  &__link_active
    text-decoration none
    @media (min-width $screen_sm)
      color transparent!important
    &:before
      transform rotate(-180deg)

  &__link_active:hover
    cursor default
    &:before
      display none

  &__txt
    font-size 18px
