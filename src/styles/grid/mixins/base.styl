clearfix()
  &:before,
  &:after
    content " "
    display table

  &:after
    clear both

center-block()
  display block
  margin-left auto
  margin-right auto

hide-text()
  font unquote('0/0') a
  color transparent
  text-shadow none
  background-color transparent
  border 0

list-unstyled()
  list-style none
  padding 0
  margin 0
